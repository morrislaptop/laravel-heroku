{
    "addons": [
        "heroku-postgresql",
        "heroku-redis"
    ],
    "buildpacks": [
        {
            "url": "heroku/php"
        },
        {
            "url": "heroku/nodejs"
        }
    ],
    "env": {
        "DB_CONNECTION": "pgsql",
        "APP_KEY": {
            "generator": "secret"
        }
    },
    "scripts": {
        "postdeploy": [
            "php artisan db:seed",
            "php artisan passport:client --personal"
        ]
    }
}
