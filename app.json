{
    "addons": [
        "heroku-postgresql",
        "heroku-redis",
        "scheduler"
    ],
    "buildpacks": [
        {
            "url": "heroku/php"
        },
        {
            "url": "heroku/nodejs"
        }
    ],
    "env": {
        "APP_NAME": "my-laravel-app",
        "APP_ENV": "review",
        "APP_KEY": {
            "generator": "secret"
        },
        "APP_DEBUG": "true",
        "LOG_CHANNEL": "errorlog",
        "DB_CONNECTION": "pgsql",
        "CACHE_DRIVER": "redis",
        "QUEUE_CONNECTION": "redis",
        "SESSION_DRIVER": "redis"
    },
    "scripts": {
        "postdeploy": [
            "php artisan db:seed",
            "php artisan passport:client --personal"
        ]
    },
    "environments": {
        "test": {
            "scripts": {
                "test": "vendor/bin/phpunit --printer gh640\\\\PhpunitTap\\\\TapResultPrinter"
            }
        }
    }
}
